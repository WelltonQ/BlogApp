<h2>Lista de categorias:</h2>
<hr>
<a href='/admin/categorias/add'><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Registrado em: </small>
            <small class="data date-{{id}}"></small>
            <script>
                document.querySelector('.date-{{id}}').innerHTML = new Date('{{date}}').toLocaleDateString();
            </script>
            <audio>{{musica}}</audio><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar categoria</button></a>
        </div>
    </div>
{{else}}

{{/each}}